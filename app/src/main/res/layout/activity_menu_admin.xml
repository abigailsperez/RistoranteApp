<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MenuAdminActivity"
    android:focusable="auto"
    android:orientation="vertical"
    android:background="#FDFEFE">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="Menú"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="cursive"
        android:text="Administrador"
        android:textSize="40dp" />

    <Button
        android:id="@+id/adminCategory"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#E9967A"
        android:ems="20"
        android:fontFamily="monospace"
        android:onClick="eventAddCategory"
        android:singleLine="true"
        android:text="Gestión de Categorías"
        android:textStyle="bold" />


    <Button
        android:id="@+id/adminMeal"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="#E9967A"
        android:ems="20"
        android:onClick="eventAddMeal"
        android:text="Gestion de platillos" />

    <Button
        android:id="@+id/adminIn"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FAB39A"
        android:ems="20"
        android:onClick="eventShowIn"
        android:text="Reporte de entradas" />

    <Button
        android:id="@+id/adminOut"
        android:layout_width="245dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FAB39A"
        android:ems="20"
        android:onClick="eventShowOut"
        android:text="Reporte de salidas" />

    <Button
        android:id="@+id/adminCS"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:backgroundTint="#999999"
        android:ems="20"
        android:onClick="endSession"
        android:text="Cerrar sesión" />

</LinearLayout>