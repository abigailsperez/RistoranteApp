        <activity
            android:name=".view.ShowSessionInActivity"
            android:exported="false" />
        <activity
            android:name=".view.ShowBillsActivity"
            android:exported="false"
            android:label="@string/title_activity_list_bill"
            android:theme="@style/Theme.RistoranteHttp.NoActionBar" />
        <activity
            android:name=".view.MenuCashierActivity"
            android:exported="false" />
        <activity
            android:name=".view.MenuWaiterActivity"
            android:exported="false" />
        <activity
