            android:name=".view.AddBillMenuActivity"
            android:exported="false" />
        <activity
            android:name=".view.ShowSessionOutActivity"
            android:exported="false" />
        <activity
            android:name=".view.ShowMenuActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddBillActivity"
            android:exported="false" />
        <activity
            android:name=".view.EditMealActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddMealActivity"
            android:exported="false" />
        <activity
            android:name=".view.EditCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.MenuAdminActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>